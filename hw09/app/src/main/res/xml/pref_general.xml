<PreferenceScreen
    xmlns:android = "http://schemas.android.com/apk/res/android"

    android:layout_width ="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title        ="Location"
        android:key          ="location"
        android:defaultValue ="94043"
        android:inputType    ="text"
        android:singleLine   ="true">
    </EditTextPreference>

    <ListPreference
        android:title        ="Temperature Units"
        android:key          ="units"
        android:defaultValue ="metric"
        android:entryValues  ="@array/pref_units_values"
        android:entries      ="@array/pref_units_options">
    </ListPreference>

    <MultiSelectListPreference
        android:title        ="Properties to Show"
        android:key          ="properties"
        android:defaultValue ="@array/pref_properties_values"
        android:entryValues  ="@array/pref_properties_values"
        android:entries      ="@array/pref_properties_options">
    </MultiSelectListPreference>

</PreferenceScreen>